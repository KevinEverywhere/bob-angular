{
  "name": "bob-angular",
  "version": "0.0.0",
  "description": "A visual best of breed solution for AngularJS using Less, Three, and d3 frameworks.",
  "repository": "https://github.com/KevinEverywhere/bob-angular",
  "license": "MIT",
  "devDependencies": {
    "karma": "~0.10",
    "protractor": "^1.4.0",
    "bower": "^1.3.1",
    "shelljs": "^0.2.6",
    "karma-junit-reporter": "^0.2.2",
    "grunt": "~0.4.1",
    "grunt-contrib-uglify": "~0.2.0",
    "grunt-contrib-cssmin": "~0.6.0",
    "grunt-html2js":"0.2.x",
    "grunt-contrib-watch": "~0.4.0",
    "selenium-webdriver": "2.34.x"
  },
  "config": {
    "unsafe-perm":true,
    "//": "Included to avoid 'cannot run in wd' error"
  },
  "dependencies": {
    "express": "^4.1.1",
    "morgan": "^1.0.0",
    "body-parser": "^1.0.2",
    "method-override": "^1.0.0"
  },
  "scripts": {
    "postinstall": "./node_modules/bower/bin/bower install",

    "prestart": "npm install",
    "start": "node index.js",
    "starttest": "node exports.index.js",

    "pretest": "npm install",
    "test": "./node_modules/karma/bin/karma start",
    "test-single-run": "./node_modules/karma/bin/karma start --single-run",

    "preupdate-webdriver": "npm start",
    "update-webdriver": "webdriver-manager update",

    "preupdate-test-webdriver": "npm run starttest",
    "update-test-webdriver": "webdriver-manager update --standalone",

    "protractor": "npm run update-test-webdriver --standalone",
    "protract": "protractor test/e2e/protractor.conf.js",

    "update-index-async": "node -e \"require('shelljs/global'); sed('-i', /\\/\\/@@NG_LOADER_START@@[\\s\\S]*\\/\\/@@NG_LOADER_END@@/, '//@@NG_LOADER_START@@\\n' + sed(/sourceMappingURL=angular-loader.min.js.map/,'sourceMappingURL=bower_components/angular-loader/angular-loader.min.js.map','app/bower_components/angular-loader/angular-loader.min.js') + '\\n//@@NG_LOADER_END@@', 'app/index-async.html');\""
  }
}